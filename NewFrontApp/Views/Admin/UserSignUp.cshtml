    <script src="~/Content/assets/js/vendor/sparkline/jquery.sparkline.min.js"></script>
    <script src="~/Content/assets/js/vendor/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/assets/js/vendor/animsition/js/jquery.animsition.min.js"></script>
