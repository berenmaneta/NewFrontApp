</head>





<body id="minovate" class="appWrapper">

    <div id="wrap" class="animsition">
        <div class="page page-core page-login">
            <div class="container w-420 p-15 bg-white mt-40 text-center">
                <h2 class="text-light text-greensea">Sign Up</h2>
                @*<form name="form" class="form-validation mt-20">*@
                @using (Html.BeginForm("SaveUser", "Admin", FormMethod.Post))
                {
                    <p class="help-block text-left">
                        Enter your personal details below:
                    </p>
                    <div class="form-group">
                        <input type="text" class="form-control underline-input" placeholder="Full Name" name="name">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control underline-input" placeholder="Email" name="email">
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Password" class="form-control underline-input" name="password">
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Confirm Password" class="form-control underline-input" name="confirmPassword">
                    </div>
                    @*</form>*@
                    <div class="bg-slategray lt wrap-reset mt-20 text-left">
                        <p class="m-0">
                            <button type="submit" class="btn btn-greensea b-0 text-uppercase pull-right">Insert</button>
                            <a href='@Url.Action("Login", "Admin")' class="btn btn-lightred b-0 text-uppercase" role="button" tabindex="0" id="add-entry"> Back</a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/Content/assets/js/vendor/jquery/jquery-1.11.2.min.js"><\/script>')</script>
