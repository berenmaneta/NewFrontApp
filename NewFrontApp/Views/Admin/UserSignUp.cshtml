@model NewFrontApp.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Admin Sign up</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/assets/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/vendor/animate.css">
    <link rel="stylesheet" href="~/Content/assets/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/assets/js/vendor/animsition/css/animsition.min.css">
