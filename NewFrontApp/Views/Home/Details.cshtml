@model NewFrontApp.Models.Product

@{
    ViewBag.Title = "Detalhes";
    var base64 = Convert.ToBase64String(@Model.image);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}


<div class="lado-a-lado">
    <div class="one">
        <div class="detalhe-produto">
            <img class="imagem-produto" src="@imgSrc">
        </div>
    </div>
    <div class="two">
        <div>
            <H2 style="margin-top: 50px;">@Model.Name</H2>
            <h3>Descrição: @Model.Description</h3>
            <h3>Preço: R$ @Model.Price</h3>
        </div>
        <div class="mb-10">
            <h4>Quantidade:</h4>
            <input id="qtd" type="text" style="width:100px;">
            <button class="btn btn-info" type="button" id="addressSearch" onclick="location.href='@Url.Action("AddCart", "MyCart", new { idProduct = @Model.Id, name = @Model.Name, price = @Model.Price, chave = 'a' })?' + $('#qtd').val()">Add to my cart</button>
        </div>
    </div>
</div>

