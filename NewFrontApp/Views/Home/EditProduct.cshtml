@model AspWebAPI.Models.Product

@{
    ViewBag.Title = "Detalhes";
}

<h2>@Model.Name</h2>

<div class="form-group">
    @using (Html.BeginForm("SaveProduct", "Home", new { id = Model.Id }, FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div>
            <label>Nome: </label>
            <input name="name">
        </div>

        <div>
            <label>Descrição: </label>
            <input name="description">
        </div>

        <div>
            <label>Preço: </label>
            <input name="price">
        </div>

        <div class="box-body">
            <div class="form-group">
                <label class="col-sm-2 control-label">Foto</label>
                <div class="col-sm-10">
                    <input style="cursor:pointer;" type="file" id="file" name="file" />
                </div>
                <br /><br />
            </div>
        </div> <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-info pull-right">Inserir</button>
        </div> <!-- /.box-footer -->
    }
</div>